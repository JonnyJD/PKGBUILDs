post_install() {
    echo -n "Linking gen_test_results command ..."
    ln -sf /usr/share/shunit2/bin/gen_test_results.sh /usr/bin/gen_test_results
    echo "[ DONE ]"
}

pre_upgrade() {
    pre_remove $1
}

post_upgrade() {
    post_install $1
}

pre_remove() {
    echo -n "Unlinking gen_test_results ..."
    unlink /usr/bin/gen_test_results
    echo "[ DONE ]"
}
